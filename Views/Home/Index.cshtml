@using Student_Web_Api.Models.ViewModels;
@model List<StudentMarks>
@{
    ViewData["Title"] = "Home Page";
}
<div style="display: flex;">
    <div>
        <input placeholder="Student" id="searchStudentInput"/>
        <input placeholder="Course" id="searchCourseInput"/>
        <button type="button" class="btn btn-sm btn-dark m-2" id="searchBtn">
            Search
        </button>
    </div>
    <div style="margin-left: auto">
        <button type="button" class="btn btn-sm btn-primary m-2" data-bs-toggle="modal" data-bs-target="#courseModal">
            Add Course
        </button>
        <button type="button" class="btn btn-sm btn-primary m-2" data-bs-toggle="modal" data-bs-target="#studentModal">
            Add Student
        </button>
    </div>
</div>
<div class="text-center" id="tableContainer">
    @await Html.PartialAsync("Table", Model)
</div>
<div class="modal fade" id="courseModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Course</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" onsubmit="event.preventDefault();">
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Code</label>
                        <input type="number" class="form-control" id="Code" placeholder="Enter Code">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Name</label>
                        <input type="text" class="form-control" id="Name" placeholder="Enter Name">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Description</label>
                        <input type="text" class="form-control" id="Description" placeholder="Enter Description">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button class="btn btn-primary" asp-for="AddCourse" id="AddCourse">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="studentModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Student</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" onsubmit="event.preventDefault();">
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">First Name</label>
                        <input type="text" class="form-control" id="FirstName" placeholder="First Name">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Last Name</label>
                        <input type="text" class="form-control" id="LastName" placeholder="Last Name">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Address</label>
                        <input type="text" class="form-control" id="Address" placeholder="Address">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">City</label>
                        <input type="text" class="form-control" id="City" placeholder="City">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">State</label>
                        <input type="text" class="form-control" id="State" placeholder="State">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Date of Birth</label>
                        <input type="date" class="form-control" id="DateOfBirth" placeholder="Date of Birth">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Gender</label>
                        <input type="text" class="form-control" id="Gender" placeholder="Gender">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button asp-for="AddStudent" id="AddStudent" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {

    <script>
        $("#AddCourse").click(function() {
            AddCourse();
        });
        $("#AddStudent").click(function() {
            AddStudent();
        })
        $("#searchBtn").click(function() {
            search();
        })
    </script>
}